extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-left Students List (DAW2020)
      if list.length > 0
        .w3-container 
          table.w3-table-all
            tr 
              th Number
              th Name
              th
            each s in list
              tr
                td=  s.numero 
                td=  s.nome
                td
                  button.w3-button.w3-circle.w3-teal(onclick="window.location.assign('/students/" + s.numero + "')") Consult 
                td 
                  button.w3-button.w3-circle.w3-teal(onclick="window.location.assign('/students/edit/" + s.numero + "')") Edit
                td 
                  button.w3-button.w3-circle.w3-teal(onclick="window.location.assign('/students/delete/" + s.numero + "')") Delete
      else
        .w3-container
          p There are no students...
      footer.w3-container.w3-teal
        address Gerado por dawApp :: 2020-Nov, Maria
        a(href="/") Return 

  
